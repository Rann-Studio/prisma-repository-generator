{
	"name": "prisma-repository-generator",
	"version": "2.0.1",
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/types/index.d.ts",
	"files": [
		"dist"
	],
	"bin": "./dist/bin/cli.js",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./dist/types/index.d.ts",
			"require": "./dist/cjs/index.js",
			"import": "./dist/esm/index.js"
		}
	},
	"scripts": {
		"build": "tsc && tsc-alias -p tsconfig.json",
		"postbuild": "esm2cjs --in dist/esm --out dist/cjs -l error && npm run copy-files && npm run copy-cli",
		"copy-files": "copyfiles -u 1 \"src/template/*.hbs\" \"dist\"",
		"copy-cli": "copyfiles -u 1 \"src/bin/cli.js\" \"dist\""
	},
	"keywords": [
		"prisma",
		"repository",
		"prisma-client",
		"database"
	],
	"author": "Rann-Studio",
	"license": "ISC",
	"description": "A utility to generate repository classes based on Prisma models.",
	"dependencies": {
		"@prisma/client": "^6.0.1",
		"copyfiles": "^2.4.1",
		"handlebars": "^4.7.8",
		"prettier": "^3.4.2",
		"prisma-repository-generator": "^2.0.0",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@alcalzone/esm2cjs": "^1.4.1",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.10",
		"typescript": "^5.7.2"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Rann-Studio/prisma-repository-generator.git"
	},
	"bugs": {
		"url": "https://github.com/Rann-Studio/prisma-repository-generator/issues"
	},
	"homepage": "https://github.com/Rann-Studio/prisma-repository-generator#readme"
}
